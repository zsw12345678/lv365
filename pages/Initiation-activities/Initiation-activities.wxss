  color: #999;
  display: inline-flex;
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.right-bt {
  right: 30rpx;
  color: #999;
  display: inline-flex;
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.line {
  display: block;
  position: fixed;
  height: 1rpx;
  width: 100%;
  margin-top: 89rpx;
  background-color: #eee;
}

.bottomBUTTON {
  text-align: center;
  width: 100%;
  position: relative;
}

.buttonO {
  width: 80%;
  position: relative;
  margin: 0 auto;
}

.adress {
  width: 100%;
}

.addressBox {
  width: 80%;
  margin: 0 auto;
  text-align: center;
}

.usuallyAddress {
  font-size: 30rpx;
  margin: 20rpx auto;
}

.high {
  background: #39b54a !important;
