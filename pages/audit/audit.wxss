/* pages/audit/audit.wxss */

.audit {
  width: 100%;
  display: flex;
  justify-content: center;
  overflow-x: hidden;
}

.auditBox {
  width: 95%;
}

.whiteBox {
  margin-top: 25rpx;
  display: flex;
  align-items: center;
  border-radius: 15rpx;
}

.template {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
}

/* 顶部导航栏 */

.navbar {
  flex: none;
  display: flex;
  background: #fff;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
}

/* 顶部导航字体颜色 */

.navbar .item.active {
  color: #39b54a;
}

/* 顶部指示条属性 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #39b54a;
}


